<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav"
    app:startDestination="@id/enteringActivity">

    <fragment
        android:id="@+id/discountFragment"
        android:name="com.handeekin.sneakersapp.DiscountFragment"
        android:label="fragment_discount"
        tools:layout="@layout/fragment_discount" />
    <fragment
        android:id="@+id/userInfoFragment2"
        android:name="com.handeekin.sneakersapp.UserInfoFragment"
        android:label="fragment_user_info"
        tools:layout="@layout/fragment_user_info" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.handeekin.sneakersapp.Fragment.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.handeekin.sneakersapp.ItemsFragment"
        android:label="fragment_items"
        tools:layout="@layout/fragment_items" />
    <fragment
        android:id="@+id/openingFragment"
        android:name="com.handeekin.sneakersapp.OpeningFragment"
        android:label="OpeningFragment"
        tools:layout="@layout/fragment_opening">
        <action
            android:id="@+id/action_openingFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_openingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.handeekin.sneakersapp.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.handeekin.sneakersapp.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" />
    <activity
        android:id="@+id/enteringActivity"
        android:name="com.handeekin.sneakersapp.EnteringActivity"
        android:label="activity_entering"
        tools:layout="@layout/activity_entering" />
</navigation>