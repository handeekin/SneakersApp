<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_nav"
    app:startDestination="@id/signUpFragment">

    <activity
        android:id="@+id/loginActivity"
        android:name="com.handeekin.sneakersapp.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.handeekin.sneakersapp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/discountFragment"
        android:name="com.handeekin.sneakersapp.DiscountFragment"
        android:label="fragment_discount"
        tools:layout="@layout/fragment_discount" />
    <fragment
        android:id="@+id/userInfoFragment2"
        android:name="com.handeekin.sneakersapp.UserInfoFragment"
        android:label="fragment_user_info"
        tools:layout="@layout/fragment_user_info" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.handeekin.sneakersapp.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/itemsFragment"
        android:name="com.handeekin.sneakersapp.ItemsFragment"
        android:label="fragment_items"
        tools:layout="@layout/fragment_items" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.handeekin.sneakersapp.OpeningFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_opening" >
        <action
            android:id="@+id/action_signUpFragment_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
</navigation>